<%- include("partials/header") %> 
<div class="ui main text container segment">
    <!-- segement is the outer border -->
    <div class="ui huge header"><%= blog.title %> </div>
    <div class="ui top attached ">
        <div class="item">
            <img src="<%= blog.image %> " class="ui centered rounded image">
        </div>
        <div class="content">
            <span><%= blog.created.toDateString() %> </span>
        </div>
        <div class="description">
            <p><%- blog.body %> </p>
            <!-- for using html in blog body we use the above tag -->
        </div>
        <div >
            <a class="ui inverted violet  button" href="/blogs/<%= blog._id %>/edit">Edit blog</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE " method="POST">
                <button  class="ui red inverted  button">Delete</button>
            </form>
           
            
        </div>
    </div>
    
    
    
</div>

<%- include("partials/footer") %> 